div(id="levelSelectModalPlay" class="modal fade" role="dialog")
	div(class="modal-dialog")
		div(class="modal-content")
			div(class="modal-header")
				button(type="button" class="close" data-dismiss="modal") &times;
				h4(class="modal-title") Select Level
			div(class="modal-body")
				div(class="form-group")
					input(type="text" class="form-control input-sm" placeholder="Search Level")
					button(class="btn btn-default btn-sm" id="pagDownLevelList" ng-click="playCtrl.pageDwn()")
						span(class="glyphicon glyphicon-chevron-left")
					select(id="playlevelSelect" class="form-control input-sm pull-left"  style="max-width:500px;")
						option(selected="selected") Select Level
						option(ng-repeat="option in playCtrl.levels" value="{{option.id}}") {{option.id}} -- {{option.mapname}}
					button(class="btn btn-default btn-sm pull-right" id="pagUpLevelList" ng-click="playCtrl.pageUp()")
						span(class="glyphicon glyphicon-chevron-right")
					input(type="checkbox" id="orderByPulse" ng-model="playCtrl.orderByPulse" ng-change="playCtrl.orderByChange()")
					sort by Pulse
	

			div(class="modal-footer")
				button(type="button" class="btn btn-default pull-right" data-dismiss="modal" ng-click="playCtrl.closeDialog()") Cancel
				button(type="button" class="btn btn-default pull-right" data-dismiss="modal" ng-click="playCtrl.levelChange()") GO