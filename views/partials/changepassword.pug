include nav.pug

div(class="loginSignupForm")
	div(class="enterForm")
			h3 Change Password:
			p Username: <span ng-bind="changepwCtrl.username"></span>
			label(for="username") New Password:
				input(type="password" id="password1" tabindex="1" placeholder="password" class="password")

			label(for="username") Re-enter your new Password:
				input(type="password" id="password2" tabindex="2" placeholder="password" class="password")
			b(id="password_error" class="input-error" ng-bind="changepwCtrl.validatePWerrorMsg()" ng-if="changepwCtrl.validatePW()") 
			br
			button(id="changePWButton") Change Password
			span(ng-if="changepwCtrl.loader") 
				img(src="public/img/loader.gif" id="loader")
			br
			div(id="instructions")
				div(style="float:left;")
					a(ui-sref="discover")
						h3 Discover

			div(class="clr")


include footer.pug